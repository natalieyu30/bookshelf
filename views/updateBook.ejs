<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
      integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/style.css" />
    <title>MyBookshelf</title>
  </head>
  <body>
    <!-- header -->
    <header id="header">
      <nav class="nav">
        <div class="container d-flex">
          <div class="logo">
            <a href="/" class="nav-brand">MyBookshelf</a>
          </div>
          <ul class="nav-items d-flex">
            <li><a href="/" class="nav-item">AllBooks</a></li>
            <li><a href="/add-book" class="nav-item">AddBook</a></li>
          </ul>
        </div>
      </nav>
    </header>
    <!-- /header -->

    <!-- main -->
    <main id="site-main">
      <div class="container d-flex">
        <div class="form-title">
          <h2>Update Book Info</h2>
        </div>
        <!-- form handling -->
        <form
          action="/api/books/<%= book[0]._id %>?_method=PUT"
          method="POST"
          class="add-form"
          id="update-form"
        >
          <div class="update-book">
            <div class="form-group">
              <label for="title">Title</label>
              <input type="hidden" name="id" value="" />
              <input
                type="text"
                name="title"
                value="<%= book[0].title %>"
                placeholder="Atomic Habit"
              />
            </div>
            <div class="form-group">
              <label for="author">Author</label>
              <input
                type="text"
                name="author"
                value="<%= book[0].author %>"
                placeholder=""
              />
            </div>
            <div class="form-group">
              <label for="date">Date</label>
              <input
                type="text"
                name="date"
                value="<%= book[0].date %>"
                placeholder=""
              />
            </div>
            <div class="form-group radio-form-group">
              <label for="rating">Rating</label>
              <div class="stars-radio">
                <input type="radio" name="rating" id="rate-5" value="5" <%=
                book[0].rating == 5 ? 'checked': '' %> />
                <label for="rate-5" class="fas fa-star"> </label>
                <input type="radio" name="rating" id="rate-4" value="4" <%=
                book[0].rating == 4 ? 'checked': '' %>/>
                <label for="rate-4" class="fas fa-star"> </label>
                <input type="radio" name="rating" id="rate-3" value="3" /<%=
                book[0].rating == 3 ? 'checked': '' %>>
                <label for="rate-3" class="fas fa-star"> </label>
                <input type="radio" name="rating" id="rate-2" value="2" <%=
                book[0].rating == 2 ? 'checked': '' %>/>
                <label for="rate-2" class="fas fa-star"> </label>
                <input type="radio" name="rating" id="rate-1" value="1" <%=
                book[0].rating == 1 ? 'checked': '' %>/>
                <label for="rate-1" class="fas fa-star"> </label>
              </div>
            </div>
            <div class="form-group">
              <label for="desc">Description</label>
              <textarea name="desc" id="desc"><%= book[0].desc %></textarea>
            </div>

            <div class="form-group">
              <button class="add-btn" type="submit">Update</button>
            </div>
          </div>
        </form>
      </div>
    </main>
    <!-- /main -->

    <!-- include footer -->
  </body>
</html>
