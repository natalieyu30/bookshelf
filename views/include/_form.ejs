<!-- form handling -->
<form action="/api/books" method="POST" id="add-form">
  <div class="new-book">
    <div class="form-group">
      <label for="title">Title</label>
      <!-- <input type="hidden" name="id" value="" /> -->
      <input type="text" name="title" value="" placeholder="Atomic Habits" />
    </div>
    <div class="form-group">
      <label for="author">Author</label>
      <input type="text" name="author" value="" placeholder="James Clear" />
    </div>
    <div class="form-group">
      <label for="date">Date</label>
      <input type="text" name="date" value="" placeholder="Jan 09, 2021" />
    </div>
    <div class="form-group radio-form-group">
      <label for="rating">Rating</label>
      <div class="stars-radio">
        <input type="radio" name="rating" id="rate-5" value="5" />
        <label for="rate-5" class="fas fa-star"> </label>
        <input type="radio" name="rating" id="rate-4" value="4" />
        <label for="rate-4" class="fas fa-star"> </label>
        <input type="radio" name="rating" id="rate-3" value="3" />
        <label for="rate-3" class="fas fa-star"> </label>
        <input type="radio" name="rating" id="rate-2" value="2" />
        <label for="rate-2" class="fas fa-star"> </label>
        <input type="radio" name="rating" id="rate-1" value="1" />
        <label for="rate-1" class="fas fa-star"> </label>
      </div>
    </div>
    <div class="form-group">
      <label for="desc">Description</label>
      <textarea name="desc" id="desc"></textarea>
    </div>

    <div class="form-group">
      <button class="add-btn" type="submit">Create</button>
    </div>
  </div>
</form>
